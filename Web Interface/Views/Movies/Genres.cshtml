@model Web_Interface.Models.ListGenresViewModel


@foreach (var genre in @Model.Genres)
{
    if (@Model.CoverArt.ContainsKey(@genre))
     {
         <div class="col-md-4 col-sm-6 col-xs-12">
             <h2>@genre.Name</h2>
        
             <div class ="genre-listing">
                 <img class="img-responsive img-rounded" src="@Model.CoverArt[@genre]"/>
                 <div class="movie">
                     @Model.SampleMovies[@genre].Title
                 </div>
             </div>
            
             @Html.ActionLink(String.Format("See {0} movies", @genre.Name), "ByGenre", "Movies", new {name = @genre.Name}, null)
         </div>
     }
}